# 生产环境配置示例
# 复制此文件为 .env 并根据需要修改

# =============================================================================
# 基础配置
# =============================================================================

# 调试模式（生产环境建议设为False）
DEBUG=False

# 密钥（生产环境必须使用强密钥）
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# 允许的主机（生产环境）
ALLOWED_HOSTS=meowsite.cn,www.meowsite.cn,101.32.161.229,localhost,127.0.0.1

# =============================================================================
# CSRF配置
# =============================================================================

# CSRF信任的源（生产环境）
CSRF_TRUSTED_ORIGINS=https://meowsite.cn,https://www.meowsite.cn,http://meowsite.cn:80,http://www.meowsite.cn:80,http://101.32.161.229:80,http://localhost:8000,http://127.0.0.1:8000

# CSRF Cookie设置（生产环境安全）
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Lax

# =============================================================================
# 会话配置
# =============================================================================

# 会话Cookie设置（生产环境安全）
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# SSL安全配置
# =============================================================================

# SSL重定向（由nginx处理）
SECURE_SSL_REDIRECT=False

# HSTS设置
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# =============================================================================
# 邮件配置
# =============================================================================

# 邮件后端（生产环境使用SMTP）
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.qq.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@qq.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=Meow Site <noreply@meowsite.cn>

# =============================================================================
# 静态文件配置
# =============================================================================

# 静态文件URL
STATIC_URL=/static/
MEDIA_URL=/media/

# 静态文件路径（生产环境使用nginx配置的路径）
STATIC_ROOT=C:/var/www/meowsite.cn/staticfiles
MEDIA_ROOT=C:/var/www/meowsite.cn/media
STATICFILES_DIRS=C:/var/www/meowsite.cn/static

# =============================================================================
# 日志配置
# =============================================================================

# 日志目录（生产环境使用系统标准目录）
LOG_DIR=C:/var/log/meowsite

# 日志级别（生产环境显示重要信息）
LOG_LEVEL=INFO

# =============================================================================
# 数据库配置（MySQL）
# =============================================================================

# MySQL数据库配置
DB_NAME=meowsite_prod
DB_USER=meow_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=3306